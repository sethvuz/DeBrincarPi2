<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/amareloClaro"/>
            <stroke
                android:color="@color/azulEscuro"
                android:width="1dp"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="@color/azulMedio"/>
            <stroke
                android:color="@color/amareloEscuro"
                android:width="1dp"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>

</selector>