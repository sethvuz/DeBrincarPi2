<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    android:elevation="30dp"
    >

    <LinearLayout
        android:id="@+id/item_anun_dados"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/caixa_borda_pontilhada">


        <TextView
            android:id="@+id/item_anun_titulo"
            style="@style/TituloAnuncio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ursinho de Pelúcia"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/item_anun_desc"
            style="@style/DescricaoAnuncio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Com 6 meses de so"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="15dp"
            />

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_anun_imagem"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ursinho_brinquedo"
        app:civ_border_color="@color/azulMedio"
        app:civ_border_width="1dp"/>

    <TextView
        android:id="@+id/tipo_anuncio"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="71dp"
        android:layout_marginLeft="71dp"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:background="@drawable/botao_azul_medio"
        android:textAlignment="center"
        android:text="DOAÇÃO"
        android:textSize="15sp"
        android:textColor="@color/amareloEscuro"
        android:textStyle="bold"
        android:elevation="30dp"/>

    <ImageView
        android:id="@+id/coracao_fav"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/item_anun_dados"
        android:layout_alignRight="@+id/item_anun_dados"
        android:layout_alignParentTop="true"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:srcCompat="@drawable/coracao_fav_branco" />


</RelativeLayout>