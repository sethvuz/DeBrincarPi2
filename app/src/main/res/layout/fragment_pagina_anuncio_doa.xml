<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Activities.Fragments.PaginaAnuncioDoaFragment"
    android:background="@drawable/background_1080p_claro">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/coracao_fav_pag_doa"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginBottom="45dp"
                android:background="@drawable/ic_favorite_branco_24dp"
                android:translationZ="100dp"/>

            <RelativeLayout
                android:id="@+id/pagina_imagem_container_anuncio_doa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:background="@drawable/fundo_caixa_borda_pontilhada"
                android:gravity="center">


                        <android.support.v4.view.ViewPager
                            android:id="@+id/image_pager_doa"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/pagina_imagem_anuncio_doa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ursinho_brinquedo"
                    android:visibility="gone"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/pagina_anuncio_type_doa"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/fundo_caixa_azul_anuncio"
                android:gravity="center"
                android:text="DOAÇÃO"
                android:textAlignment="center"
                android:textColor="@color/amareloEscuro"
                android:textSize="15sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <TextView
            android:id="@+id/pagina_titulo_anuncio_doa"
            style="@style/Texto_Titulo_pagAnuncio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ursinho de Pelúcia" />

        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/azulEscuro" />

       <android.support.constraint.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="40dp">

           <Button
               android:id="@+id/btn_seguir_anuncio_doa"
               android:layout_width="wrap_content"
               android:layout_height="15dp"
               android:layout_marginStart="4dp"
               android:layout_marginLeft="4dp"
               android:layout_marginTop="5dp"
               android:background="@drawable/fundo_botao_azul_anuncio"
               android:text="SEGUIR"
               android:textSize="10sp"
               android:textColor="@color/amareloEscuro"
               app:layout_constraintStart_toEndOf="@+id/nome_autor_anuncio_doa"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/nome_autor_anuncio_doa"
               style="@style/TextoCadastro"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="8dp"
               android:layout_marginLeft="8dp"
               android:layout_marginTop="4dp"
               android:text="Fulano de tal"
               android:textColor="@color/azulEscuro"
               android:textStyle="italic|bold"
               app:layout_constraintStart_toEndOf="@+id/pagina_autor_anuncio_doa"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/pagina_autor_anuncio_doa"
               style="@style/Texto_Autor_pagAnuncio"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="4dp"
               android:text="Criado por:"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/data_criacao_anuncio_doa"
               style="@style/Texto_Autor_pagAnuncio"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="4dp"
               android:text="Em..."
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/pagina_autor_anuncio_doa" />
       </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:background="@color/azulEscuro" />

        <TextView
            android:id="@+id/descricao_label_pagina_anuncio_doa"
            style="@style/Descricao_label_pagAnuncio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição:" />

        <TextView
            android:id="@+id/descricao_pagina_anuncio_doa"
            style="@style/Descricao_pagAnuncio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fundo_caixa_cinza_anuncio"
            android:text="Ursinho com pouco tempo de uso..." />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_solicitar_pag_anuncio_doa"
                style="@style/AnuncioBtn"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/fundo_botao_amarelo_anuncio"
                android:text="@string/btn_solicitara_anun"
                android:textColor="@color/azulMedio"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_mensagem_pag_anuncio_doa"
                style="@style/AnuncioBtn"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/fundo_botao_azul_anuncio"
                android:text="@string/btn_mensagem_anun"
                android:textColor="@color/amareloEscuro"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="1dp"
                android:layout_height="80dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/azulMedio"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_mensagem_pag_anuncio_doa"
                app:layout_constraintHorizontal_bias="0.511"
                app:layout_constraintStart_toEndOf="@+id/btn_solicitar_pag_anuncio_doa"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    </ScrollView>

</FrameLayout>