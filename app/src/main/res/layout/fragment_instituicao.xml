<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Fragments.InstituicaoFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp">


            <ImageView
                android:id="@+id/set_imagem_inst"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:srcCompat="@drawable/carinha_adc_foto" />

            <TextView
                android:id="@+id/text_adfoto_inst"
                style="@style/TextoCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/adicionar_foto"
                android:textAlignment="center"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColorHint="@color/cinzaClaro"
                android:theme="@style/TextoCadastroTheme"
                app:hintAnimationEnabled="true"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/cad_nome_inst"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:textColor="@color/azulEscuro"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:inputType="textPersonName"
                    android:hint="@string/cad_nome_hint" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColorHint="@color/cinzaClaro"
                android:theme="@style/TextoCadastroTheme"
                app:hintAnimationEnabled="true"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/cad_cnpj_inst"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:textColor="@color/azulEscuro"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:inputType="textPersonName"
                    android:hint="@string/cad_cnpj_hint"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColorHint="@color/cinzaClaro"
                android:theme="@style/TextoCadastroTheme"
                app:hintAnimationEnabled="true"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/cad_descricao_inst"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:textColor="@color/azulEscuro"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:inputType="textPersonName"
                    android:hint="@string/cad_atuação_hint" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColorHint="@color/cinzaClaro"
                android:theme="@style/TextoCadastroTheme"
                app:hintAnimationEnabled="true"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/cad_endereco_inst"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:textColor="@color/azulEscuro"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:inputType="textPersonName"
                    android:hint="@string/cad_endereco_hint" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColorHint="@color/cinzaClaro"
                android:theme="@style/TextoCadastroTheme"
                app:hintAnimationEnabled="true"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/cad_cep_inst"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:textColor="@color/azulEscuro"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:inputType="textPersonName"
                    android:hint="@string/cad_cep_hint" />
            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/caixa_cadastro_alt"
                android:textColorHint="@color/cinzaClaro"
                android:theme="@style/CaixaCadastro"
                android:background="@drawable/caixas_arredondadas"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                app:hintEnabled="false"
                android:elevation="5dp">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/cad_email_inst"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:paddingStart="25dp"
                    android:paddingLeft="25dp"
                    android:hint="@string/cad_email_hint"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/caixas_arredondadas"
                    android:backgroundTint="@color/cinzaClaro" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/caixa_cadastro_alt"
                android:textColorHint="@color/cinzaClaro"
                android:theme="@style/CaixaCadastro"
                android:background="@drawable/caixas_arredondadas"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                app:hintEnabled="false"
                android:elevation="5dp">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/cad_senha_inst"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:paddingStart="25dp"
                    android:paddingLeft="25dp"
                    android:hint="@string/cad_senha_hint"
                    android:inputType="textPassword"
                    android:background="@drawable/caixas_arredondadas"
                    android:backgroundTint="@color/cinzaClaro"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/caixa_cadastro_alt"
                android:textColorHint="@color/cinzaClaro"
                android:theme="@style/CaixaCadastro"
                android:background="@drawable/caixas_arredondadas"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                app:hintEnabled="false"
                android:elevation="5dp">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/cad_conf_senha_inst"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:paddingStart="25dp"
                    android:paddingLeft="25dp"
                    android:hint="@string/cad_confsenha_hint"
                    android:inputType="textPassword"
                    android:background="@drawable/caixas_arredondadas"
                    android:backgroundTint="@color/cinzaClaro"/>
            </android.support.design.widget.TextInputLayout>

            <ProgressBar
                android:id="@+id/pb_instituicao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_cadastro_inst"
                style="@style/LoginBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/botao_alt"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="90dp"
                android:layout_marginRight="90dp"
                android:background="@drawable/botao_amarelo"
                android:text="@string/btn_cadastrar"
                android:textSize="@dimen/cadastro_text_size"
                android:elevation="30dp"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>