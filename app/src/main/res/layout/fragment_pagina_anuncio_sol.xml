<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Activities.Fragments.PaginaAnuncioSolFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_1080p_claro"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/pagina_imagem_container_anuncio_sol"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:background="@drawable/caixa_borda_pontilhada">

                <ImageView
                    android:id="@+id/pagina_imagem_anuncio_sol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ursinho_brinquedo" />

            </RelativeLayout>

            <TextView
                android:id="@+id/pagina_anuncio_type_sol"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/caixa_anuncio_type"
                android:backgroundTint="@color/amareloEscuro"
                android:gravity="center"
                android:text="SOLICITAÇÃO"
                android:textAlignment="center"
                android:textColor="@color/azulMedio"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/coracao_pag_sol"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="45dp"
                android:background="@drawable/coracao_fav_branco" />

        </RelativeLayout>

        <TextView
            android:id="@+id/pagina_titulo_anuncio_sol"
            style="@style/Texto_Titulo_pagAnuncio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ursinho de Pelúcia" />

        <TextView
            android:id="@+id/pagina_autor_anuncio_sol"
            style="@style/Texto_Autor_pagAnuncio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Criado por..." />

        <TextView
            android:id="@+id/data_criacao_anuncio_sol"
            style="@style/Texto_Autor_pagAnuncio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Criado em..." />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/azulMedio" />

        <TextView
            android:id="@+id/descricao_label_pagina_anuncio_sol"
            style="@style/Descricao_label_pagAnuncio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição:" />

        <TextView
            android:id="@+id/descricao_pagina_anuncio_doa"
            style="@style/Descricao_pagAnuncio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/caixa_anuncio_type"
            android:backgroundTint="@color/cinzaClaro"
            android:text="Ursinho com pouco tempo de uso..." />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_solicitar_pag_anuncio_sol"
                style="@style/AnuncioBtn"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/amareloEscuro"
                android:text="@string/btn_doar_anun"
                android:textColor="@color/azulMedio"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_mensagem_pag_anuncio_sol"
                style="@style/AnuncioBtn"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/azulMedio"
                android:text="@string/btn_mensagem_anun"
                android:textColor="@color/amareloEscuro"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="1dp"
                android:layout_height="130dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/azulMedio"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_mensagem_pag_anuncio_sol"
                app:layout_constraintHorizontal_bias="0.511"
                app:layout_constraintStart_toEndOf="@+id/btn_solicitar_pag_anuncio_sol"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <TextView
                android:id="@+id/arrecadados_label_anun_sol"
                style="@style/TextoPrincipal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:text="Arrecadados"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/solicitados_label_anun_sol"
                style="@style/TextoPrincipal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Solicitados"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/num_arrecadados_sol"
                style="@style/AnuncioBtn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/azulMedio"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/amareloEscuro"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/arrecadados_label_anun_sol" />

            <TextView
                android:id="@+id/num_solicitados_sol"
                style="@style/AnuncioBtn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/amareloEscuro"
                android:text="3"
                android:textAlignment="center"
                android:textColor="@color/azulMedio"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/solicitados_label_anun_sol" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</FrameLayout>