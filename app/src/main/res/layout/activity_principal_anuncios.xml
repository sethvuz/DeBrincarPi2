<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PrincipalAnuncios"
    android:background="@drawable/background_1080p_claro"
    android:id="@+id/drawable_layout">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/anuncios_list_toolbar"
            layout="@layout/app_bar_layout">


        </include>

        <FrameLayout
            android:id="@+id/container_principal"
            android:layout_width="match_parent"
            android:layout_height="511dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/lista_todos_anuncios"
                android:layout_width="match_parent"
                android:layout_height="557dp" />
        </FrameLayout>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navegation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginBottom="3dp"
        app:menu="@menu/menu_navegacao" />

</android.support.v4.widget.DrawerLayout>