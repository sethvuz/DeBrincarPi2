<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PrincipalAnuncios"
    android:padding="10dp"
    android:orientation="vertical"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecione a opção de cadastro:"
        style="@style/TextoCadastro"
        android:textSize="12sp"
        android:textColor="@color/azulEscuro"
        android:gravity="center_horizontal"
        android:layout_marginBottom="-8dp"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:background="@color/branco"
        android:translationZ="0.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/fundo_moldura_arredondada_azul">



        <Button
            android:id="@+id/btn_cad_doacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar Doação"
            android:background="@drawable/fundo_botao_amarelo_cadastrar"
            style="@style/TextoCadastro"
            android:elevation="30dp"
            />

        <Button
            android:id="@+id/btn_cad_solicitacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Solicitar doação"
            android:background="@drawable/fundo_botao_amarelo_cadastrar"
            style="@style/TextoCadastro"
            android:elevation="30dp"
            />

        <Button
            android:id="@+id/btn_cad_campanha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Criar campanha"
            android:background="@drawable/fundo_botao_amarelo_cadastrar"
            style="@style/TextoCadastro"
            android:elevation="30dp"
            />


    </LinearLayout>

</LinearLayout>