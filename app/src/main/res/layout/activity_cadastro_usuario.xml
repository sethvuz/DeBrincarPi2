<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1080p_claro"
    tools:context=".Activities.CadastroUsuario">

    <EditText
        android:id="@+id/cad_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="2dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:textSize="@dimen/cadastro_text_size"
        android:backgroundTint="@color/azulEscuro"
        app:layout_constraintBottom_toTopOf="@+id/cad_sobrenome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/cad_sobrenome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="2dp"
        android:ems="10"
        android:hint="Sobrenome"
        android:backgroundTint="@color/azulEscuro"
        android:inputType="textPersonName"
        android:textSize="@dimen/cadastro_text_size"
        app:layout_constraintBottom_toTopOf="@+id/cad_cpf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/cad_cpf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="2dp"
        android:ems="10"
        android:hint="CPF"
        android:inputType="number"
        android:textSize="@dimen/cadastro_text_size"
        android:backgroundTint="@color/azulEscuro"
        app:layout_constraintBottom_toTopOf="@+id/cad_nascimento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/cad_nascimento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="1dp"
        android:ems="10"
        android:hint="Data de Nascimento"
        android:inputType="date"
        android:textSize="@dimen/cadastro_text_size"
        android:backgroundTint="@color/azulEscuro"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/cad_cep"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/azulEscuro"
        android:ems="10"
        android:hint="CEP"
        android:inputType="number"
        android:textSize="@dimen/cadastro_text_size"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cad_endereço" />

    <EditText
        android:id="@+id/cad_endereço"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Endereço"
        android:inputType="textPersonName"
        android:textSize="@dimen/cadastro_text_size"
        android:backgroundTint="@color/azulEscuro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/caixaEmail"
        style="@style/TextoCadastro"
        android:layout_width="0dp"
        android:layout_height="@dimen/caixa_cadastro_alt"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:text="E-mail                  :"
        android:background="@drawable/caixa_arrendondada_cinza"
        android:paddingStart="@dimen/left_padding_caixa"
        android:paddingTop="@dimen/top_padding_caixa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cad_cep" />

    <EditText
        android:id="@+id/cad_email"
        android:layout_width="220dp"
        android:layout_height="@dimen/caixa_texto_alt"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textSize="@dimen/cadastro_text_size"
        android:backgroundTint="@color/cinzaClaro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cad_cep" />

    <TextView
        android:id="@+id/caixaSenha"
        style="@style/TextoCadastro"
        android:layout_width="0dp"
        android:layout_height="@dimen/caixa_cadastro_alt"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/caixa_arrendondada_cinza"
        android:paddingStart="@dimen/left_padding_caixa"
        android:paddingTop="@dimen/top_padding_caixa"
        android:text="Senha                  :"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caixaEmail" />

    <EditText
        android:id="@+id/cad_senha"
        android:layout_width="220dp"
        android:layout_height="@dimen/caixa_texto_alt"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:backgroundTint="@color/cinzaClaro"
        android:ems="10"
        android:inputType="textPassword"
        android:textSize="@dimen/cadastro_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cad_email" />

    <TextView
        android:id="@+id/caixaConfSenha"
        style="@style/TextoCadastro"
        android:layout_width="0dp"
        android:layout_height="@dimen/caixa_cadastro_alt"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/caixa_arrendondada_cinza"
        android:paddingStart="@dimen/left_padding_caixa"
        android:paddingTop="@dimen/top_padding_caixa"
        android:text="Confirma Senha:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caixaSenha" />

    <EditText
        android:id="@+id/cad_conf_senha"
        android:layout_width="220dp"
        android:layout_height="@dimen/caixa_texto_alt"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:backgroundTint="@color/cinzaClaro"
        android:ems="10"
        android:inputType="textPassword"
        android:textSize="@dimen/cadastro_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cad_senha" />


    <Button
        android:id="@+id/btn_cadastro"
        style="@style/LoginBtn"
        android:layout_width="149dp"
        android:layout_height="@dimen/botao_alt"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/botao_amarelo"
        android:text="Cadastrar"
        android:textSize="@dimen/cadastro_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caixaConfSenha" />



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="76dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/carinha_adc_foto" />

    <TextView
        android:id="@+id/textView"
        style="@style/TextoCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar Foto"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="152dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />



</android.support.constraint.ConstraintLayout>