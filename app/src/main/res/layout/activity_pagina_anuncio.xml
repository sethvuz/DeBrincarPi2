<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PrincipalAnuncios"
    android:background="@drawable/background_1080p_claro"
    android:id="@+id/anun_pagina_layout"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/app_bar_pagina_anuncio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    app:popupTheme="@style/ToolbarTheme"/>

            </android.support.design.widget.AppBarLayout>

    </android.support.design.widget.CoordinatorLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Página do anúncio!"
        android:gravity="center"
        android:layout_marginTop="240dp"/>


    <android.support.design.widget.NavigationView
        android:id="@+id/anun_pagina_navegation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginBottom="3dp"
        app:itemHorizontalPadding="40dp"
        app:menu="@menu/menu_navegacao" />



</android.support.v4.widget.DrawerLayout>