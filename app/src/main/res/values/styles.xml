<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/azulMedio</item>
        <item name="android:textColorSecondary">@color/azulMedio</item>
    </style>


    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/azulMedio</item>
        <item name="android:textColorSecondary">@color/azulMedio</item>
    </style>

    <style name="ToolbarThemeTransp" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/azulMedio</item>
        <item name="android:textColorSecondary">@color/azulMedio</item>
    </style>


    <style name="TextoPrincipal">
        <item name="android:textColor">@color/azulMedio</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextoCadastro">
        <item name="met_textColor">@color/azulMedio</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="met_floatingLabelAlwaysShown">true</item>
        <item name="met_floatingLabelTextColor">@color/azulClaro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/cadastro_text_size</item>
    </style>

    <style name="TituloAnuncio">
        <item name="android:textColor">@color/azulMedio</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Texto_Titulo_pagAnuncio">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/azulMedio</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="Texto_Autor_pagAnuncio">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/azulMedio</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="Descricao_pagAnuncio">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/azulMedio</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="Descricao_label_pagAnuncio">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/azulMedio</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="DescricaoAnuncio">
        <item name="android:textColor">@color/azulMedio</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="TextoCadastroTheme" parent="TextAppearance.AppCompat">
        <item name="colorControlNormal">@color/azulClaro</item>
        <item name="android:textSize">10sp</item>
        <item name="colorPrimaryDark">@color/azulClaro</item>
        <item name="colorPrimary">@color/azulClaro</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="TextoCadastroThemeSemUnderline" parent="TextAppearance.AppCompat">
    <item name="colorControlNormal">@color/cinzaClaro</item>
    <item name="android:textSize">10sp</item>
    <item name="colorPrimaryDark">@color/azulClaro</item>
    <item name="colorPrimary">@color/cinzaClaro</item>
    <item name="colorAccent">@color/colorPrimary</item>
    <item name="android:layout_marginStart">8dp</item>
    <item name="android:layout_marginLeft">8dp</item>
    <item name="android:layout_marginEnd">8dp</item>
    <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="CaixaCadastro">
        <item name="android:textColor">@color/azulEscuro</item>
        <item name="android:padding">0.5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="CaixaLogin">
        <item name="android:textColor">@color/azulEscuro</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">0.5dp</item>
    </style>

    <style name="LoginBtn">
        <item name="android:textColor">#ffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AnuncioBtn">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">130dp</item>
        <item name="android:background">@drawable/caixa_anuncio_type</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Add_Location_Style">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/azulMedio</item>
        <item name="android:drawableLeft">@drawable/round_add_location_24</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:text">Adicionar Localização</item>
    </style>

    <style name="Cad_Anuncio_BTN">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:text">CADASTRAR</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/azulMedio</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/caixas_arredondadas</item>
        <item name="android:backgroundTint">@color/amareloEscuro</item>

    </style>


</resources>
