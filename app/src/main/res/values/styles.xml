<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/amareloEscuro</item>
        <item name="colorPrimaryDark">@color/azulEscuro</item>
        <item name="colorAccent">@color/amareloClaro</item>
        <item name="android:textColor">@color/azulEscuro</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/azulEscuro</item>
        <item name="colorPrimaryDark">@color/azulMedio</item>
        <item name="colorAccent">@color/amareloEscuro</item>
    </style>


    <style name="TextoPrincipal">
        <item name="android:textColor">@color/azulEscuro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextoCadastro">
        <item name="android:textColor">@color/azulEscuro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CaixaCadastro">
        <item name="android:textColor">@color/azulEscuro</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">@dimen/caixa_cadastro_alt</item>
        <item name="android:paddingLeft">@dimen/left_padding_caixa</item>
        <item name="android:textStyle">italic</item>
        <item name="android:background">@drawable/caixa_arrendondada_cinza</item>
    </style>

    <style name="LoginBtn">
        <item name="android:background">@color/amareloEscuro</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
